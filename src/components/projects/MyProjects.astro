---
import ProjectCard from "./project-card.astro";

const projects = [
  {
    url: "https://github.com/lamasumas/lamasumas.github.io",
    title: "Portafolio Webpage",
    description:
      "This webpage, a profesional portafolio to showcase my work and my carreer. github pages.",
    technologies: ["Astro", "Tailwind CSS"],
  },

  {
    url: "https://github.com/lamasumas/Machine_Learning",
    title: "Machine Learning Implementation",
    description:
      "The implementation of different machine learning algorithms, in order to practice and learn about this field.",
    technologies: ["Python", "Processing", "Javascript"],
  },
];
---

<section
  id="myProjects"
  class="w-full min-h-dvh flex flex-col items-center gap-13 p-3"
>
  <div class="text-5xl flex section-title justify-center">My Side-Projects</div>
  <div
    class="flex flex-col gap-4 justify-center max-w-3xl overflow-auto max-h-[500px]"
  >
    {
      projects.map((project) => (
        <ProjectCard
          url={project.url}
          title={project.title}
          description={project.description}
          technologies={project.technologies}
        />
      ))
    }
  </div>
</section>
